# Handle system
set $mode_system System (l) , (e) , (s) , (r) , (Shift+s) 
mode "$mode_system" {
    bindsym l exec --no-startup-id /home/notis/.config/i3/i3exit lock, mode "default"
    bindsym e exec --no-startup-id /home/notis/.config/i3/i3exit logout, mode "default"
    bindsym s exec --no-startup-id /home/notis/.config/i3/i3exit suspend, mode "default"
    bindsym r exec --no-startup-id /home/notis/.config/i3/i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id /home/notis/.config/i3/i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $alt+o mode "$mode_system"

